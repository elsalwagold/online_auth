<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for HR Employee Mapping -->
        <record id="seq_hr_employee_mapping" model="ir.sequence">
            <field name="name">HR Employee Mapping</field>
            <field name="code">hr.employee.mapping.id</field>
            <field name="prefix">EMP</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="active" eval="True"/>
        </record>
        <!-- Sequence for HR Attendance Mapping -->
        <record id="seq_hr_attendance_mapping" model="ir.sequence">
            <field name="name">HR Attendance Mapping</field>
            <field name="code">hr.attendance.mapping.id</field>
            <field name="prefix">ATT</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
